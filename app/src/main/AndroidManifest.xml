<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ataraxia.artemis">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/artemisbow"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/artemisbow_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Artemis">
        <activity
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:name="com.ataraxia.artemis.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Artemis.NoActionBar"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>